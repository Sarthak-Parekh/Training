<h1>Product</h1>
{{mydata.length}} Records Found
<table border='1'>
    <tr>
        <th>Product Name</th>
         <th>Product Image</th>
          <th>Product Price</th>
        
    </tr>

{{#each mydata}}
    <tr>
    <td>{{Product}}</td>
    <td><img src="../images/{{Image}}" width="100" height="100"></td>
<td>{{Price}}</td>  
    <td>
        <a href="/product/edit/{{_id}}">Edit</a> |
        <a href="/product/delete/{{_id}}">Delete</a>

    </td>
    </tr>
{{/each}}


</table>